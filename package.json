{
  "name": "hogar-jesus",
  "private": true,
  "description": "Website for Hogar Jesus de Nazaret",
  "scripts": {
    "bookshop": "bookshop-browser",
    "jekyll": "BUNDLE_GEMFILE=docs/Gemfile bundle exec jekyll serve --port 6060 --trace --unpublished --source site",
    "start": "run-p bookshop jekyll",
    "postinstall": "mkdir -p docs/node_modules/.bin/ && ln -sf ../../../node_modules/.bin/postcss docs/node_modules/.bin/postcss"
  },
  "devDependencies": {
    "@bookshop/browser": "3.4.1",
    "@bookshop/jekyll-engine": "3.4.1",
    "@bookshop/generate": "3.4.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^8.3.1",
    "postcss-fluidvars": "^1.1.1"
  }
}